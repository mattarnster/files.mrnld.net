<div class="admin">
    <p><a href="/admin/add-user" class="button">Add user</a></p>
    <h2>Users:</h2>
    <table>
        <thead>
            <tr>
                <td>Email</td>
                <td>Verified</td>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr>
                    <td>{{this.email}}</td>
                    <td>{{this.verified}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>